# Пример файла переменных окружения для production
# Скопируйте этот файл в .env и заполните реальными значениями
# ВНИМАНИЕ: .env должен быть в .gitignore!

# Django Settings
DJANGO_SETTINGS_MODULE=vikivostokweb.settings.production
SECRET_KEY=your-secret-key-here-change-me-use-long-random-string
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
DB_NAME=vikivostok_web
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=127.0.0.1
DB_PORT=3306

# Email
EMAIL_HOST=mail.vikivostok.ru
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=office@vikivostok.ru
EMAIL_HOST_PASSWORD=your_email_password

# reCAPTCHA
RECAPTCHA_SITE_KEY=your_site_key
RECAPTCHA_SECRET_KEY=your_secret_key

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_CACHE_URL=redis://127.0.0.1:6379/1

# Security Settings (optional, defaults are in production.py)
SECURE_SSL_REDIRECT=True

